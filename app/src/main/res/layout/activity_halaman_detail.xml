<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1"
    tools:context=".HalamanDetail">

    <FrameLayout
        android:id="@+id/change_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_image"/>
    </FrameLayout>
    <ScrollView
        android:id="@+id/svAdd"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/change_profile"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNIM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textSize="18dp"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/NIMval"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:background="#fff"
                android:textSize="18dp"
                android:text="NIM"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvNAMA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA"
                android:textSize="18dp"
                android:layout_below="@+id/tvNIM"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/NAMAval"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/NIMval"
                android:textColor="#000"
                android:background="#fff"
                android:textSize="18dp"
                android:text="Nama"
                android:layout_alignParentEnd="true"/>


            <TextView
                android:id="@+id/tvPRODI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRODI"
                android:textSize="18dp"
                android:layout_below="@+id/tvNAMA"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/PRODIval"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/NAMAval"
                android:textColor="#000"
                android:background="#fff"
                android:textSize="18dp"
                android:text="Prodi"
                android:layout_alignParentEnd="true"/>



            <TextView
                android:id="@+id/tvANGKATAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANGKATAN"
                android:textSize="18dp"
                android:layout_below="@+id/tvPRODI"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/ANGKATANval"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/PRODIval"
                android:textColor="#000"
                android:background="#fff"
                android:textSize="18dp"
                android:text="Angkatan"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvBIOGRAFI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIOGRAFI"
                android:textSize="18dp"
                android:layout_below="@+id/tvANGKATAN"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/BIOGRAFIval"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/ANGKATANval"
                android:textColor="#000"
                android:background="#fff"
                android:textSize="18dp"
                android:text="Biografi"
                android:layout_alignParentEnd="true"/>

            <Button
                android:id="@+id/btnEditPROFILE"
                android:layout_below="@+id/BIOGRAFIval"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:background="#A9275DE7"
                android:text="EDIT PROFILE"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnDeleteMHS"
                android:layout_below="@+id/btnEditPROFILE"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="#FC1B1B"
                android:text="DELETE MAHASISWA"
                android:textColor="#fff"
                android:textSize="20dp" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>